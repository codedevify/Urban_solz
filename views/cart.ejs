<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart | Urban Solz</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    /* === RESET & BASE === */
    *{margin:0;padding:0;box-sizing:border-box}
    body{
      font-family:'Poppins',sans-serif;
      background:linear-gradient(180deg,#f6f0e9 0%,#f5deb3 100%);
      color:#3e2723;
      min-height:100vh;
      display:flex;
      flex-direction:column;
    }

    header{
      background:rgba(255,255,255,0.95);
      backdrop-filter:blur(10px);
      position:sticky;top:0;z-index:1000;
      display:flex;justify-content:space-between;align-items:center;
      padding:1rem 6%;
      box-shadow:0 4px 10px rgba(0,0,0,0.05);
      flex-wrap:wrap;
    }
    header h1{font-size:1.5rem;font-weight:700;text-transform:uppercase;letter-spacing:1px;color:#3e2723;}
    header a{color:#4e342e;text-decoration:none;font-weight:500;transition:color .3s;}
    header a:hover{color:#a1887f}
    .social-links{
      display:flex;
      gap:1rem;
      flex-wrap:wrap;
      align-items:center;
      font-size:0.9rem;
    }
    .social-links a{
      color:#3e2723;
      text-decoration:none;
      font-weight:500;
      display:flex;
      align-items:center;
      gap:4px;
    }
    .social-links a:hover{color:#a1887f;}
    main{flex:1;max-width:700px;margin:80px auto;padding:0 6%;text-align:center;animation:fadein 1s ease;}
    @keyframes fadein{from{opacity:0;transform:translateY(30px);}to{opacity:1;transform:translateY(0);}}
    main h1{font-size:2rem;font-weight:700;margin-bottom:25px;text-transform:uppercase;letter-spacing:1px;}

    .cart-items{
      background:#fff;
      border-radius:20px;
      box-shadow:0 10px 25px rgba(0,0,0,0.08);
      padding:30px;
      text-align:left;
      margin-bottom:30px;
    }
    .cart-item{
      display:flex;
      align-items:center;
      justify-content:space-between;
      border-bottom:1px solid #f0e0c0;
      padding:15px 0;
      font-size:1rem;
      gap:15px;
    }
    .cart-item:last-child{border-bottom:none;}
    .item-info{flex:1;}
    .item-info strong{color:#3e2723;font-weight:600;}
    .quantity{display:flex;align-items:center;gap:8px;}
    .quantity button{
      width:34px;height:34px;background:#3e2723;color:#fff;border:none;
      border-radius:50%;font-weight:bold;cursor:pointer;transition:all .2s;
    }
    .quantity button:hover{background:#a1887f;}
    .quantity input{
      width:50px;text-align:center;padding:6px;border:1px solid #ccc;
      border-radius:8px;font-size:1rem;
    }
    .remove-btn{
      background:#d32f2f;color:#fff;border:none;padding:6px 12px;
      border-radius:8px;font-size:0.9rem;cursor:pointer;transition:all .2s;
    }
    .remove-btn:hover{background:#b71c1c;}
    .total{font-size:1.3rem;font-weight:700;text-align:right;margin:20px 0;color:#3e2723;}

    form{
      background:#fff;border-radius:20px;box-shadow:0 8px 25px rgba(0,0,0,0.08);
      padding:25px;text-align:center;transition:transform .3s;
    }
    form:hover{transform:translateY(-3px);}
    form input{
      width:100%;padding:14px 16px;border:1px solid #ccc;border-radius:10px;
      font-size:1rem;margin-bottom:15px;transition:all .3s;
    }
    form input:focus{border-color:#a1887f;box-shadow:0 0 6px rgba(161,136,127,0.5);outline:none;}
    form button{
      width:100%;padding:14px;background:#3e2723;color:#fff;border:none;
      border-radius:25px;font-size:1.1rem;font-weight:600;cursor:pointer;
      transition:all .3s;
    }
    form button:hover{background:#a1887f;color:#3e2723;transform:scale(1.03);}
    .empty{font-size:1.1rem;color:#4e342e;background:#fff;padding:30px;border-radius:20px;box-shadow:0 8px 25px rgba(0,0,0,0.08);}
    .back-link{display:inline-block;margin-top:30px;text-decoration:none;font-weight:500;color:#3e2723;transition:color .3s;}
    .back-link:hover{color:#a1887f}
    footer{
      background:#3e2723;
      color:#fff;
      text-align:center;
      padding:30px 10px;
      margin-top:auto;
      font-size:0.9rem;
    }
    footer a{
      color:#ffebcd;
      text-decoration:none;
      font-weight:500;
      transition:color .3s;
    }
    footer a:hover{color:#f5deb3;}
    .collection-desc{
      background:#fff8f0;
      padding:20px;
      border-radius:16px;
      box-shadow:0 8px 20px rgba(0,0,0,0.08);
      margin-bottom:30px;
      line-height:1.6;
      color:#4e342e;
    }
    @media(max-width:600px){
      header{flex-direction:column;gap:8px;text-align:center;}
      main{margin:60px auto;}
      main h1{font-size:1.7rem;}
      .cart-item{flex-direction:column;align-items:flex-start;gap:10px;}
      .total{text-align:left;}
      .quantity input{width:60px;}
    }
  </style>
</head>
<body>

<header>
  <h1>Urban Solz</h1>
  <div class="social-links">
    <a href="https://instagram.com/urban_solz" target="_blank">üì∏ Instagram</a>
    <a href="https://wa.me/447356081778" target="_blank">üí¨ WhatsApp</a>
    <a href="https://facebook.com/UrbanSolz" target="_blank">üìò Facebook</a>
  </div>
  <a href="/">üè† Back to Shop</a>
</header>

<main>
  <h1>Your Cart üõçÔ∏è</h1>



  <% if (!cart || cart.length === 0) { %>
    <div class="empty">
      <p>Your cart is empty üõí</p>
    </div>
  <% } else { %>
    <div class="cart-items">
      <% cart.forEach(item => { %>
        <div class="cart-item" data-id="<%= item.id %>" data-price="<%= item.price %>">
          <div class="item-info">
            <strong><%= item.name %></strong>
            <div>¬£<%= item.price.toFixed(2) %> each</div>
          </div>

          <div class="quantity">
            <button class="qty-btn" data-action="decrease">-</button>
            <input type="number" class="qty-input" value="<%= item.quantity %>" min="1">
            <button class="qty-btn" data-action="increase">+</button>
          </div>

          <button class="remove-btn">üóëÔ∏è Remove</button>
        </div>
      <% }) %>

      <div class="total">Total: ¬£<%= total.toFixed(2) %> üí∞</div>
    </div>

    <form action="/checkout" method="POST">
      <input type="email" name="email" placeholder="Your Email" required>
      <button>üí≥ Pay with Stripe</button>
    </form>
  <% } %>

  <a class="back-link" href="/">‚¨ÖÔ∏è Continue Shopping</a>
</main>

<footer>
  <p>Follow us on 
    <a href="https://instagram.com/urban_solz" target="_blank">Instagram</a> | 
    <a href="https://wa.me/447356081778" target="_blank">WhatsApp</a> | 
    <a href="https://facebook.com/UrbanSolz" target="_blank">Facebook</a>
  </p>
  <p>Contact us: <strong>+44 7356 081778</strong> | <em>urban_solz</em></p>
  <p><a href="/admin">Admin Dashboard</a></p>
  <p>&copy; <%= new Date().getFullYear() %> Urban Solz. All rights reserved.</p>
</footer>

<script>
document.addEventListener('DOMContentLoaded', () => {

  const totalElement = document.querySelector('.total');

  const recalcTotal = () => {
    let newTotal = 0;
    document.querySelectorAll('.cart-item').forEach(item => {
      const price = parseFloat(item.dataset.price);
      const qty = parseInt(item.querySelector('.qty-input').value) || 1;
      newTotal += price * qty;
    });
    totalElement.textContent = `Total: ¬£${newTotal.toFixed(2)} üí∞`;
  };

  const updateCart = async (id, quantity) => {
    try {
      if (quantity <= 0) {
        const res = await fetch(`/remove-from-cart/${id}`, { method: 'POST' });
        if (res.ok) {
          document.querySelector(`[data-id="${id}"]`).remove();
          recalcTotal();
        }
        return;
      }

      const res = await fetch(`/update-cart/${id}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ quantity })
      });

      if (res.ok) {
        recalcTotal();
      }
    } catch (err) {
      console.error('Error updating cart:', err);
    }
  };

  document.querySelectorAll('.qty-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const input = btn.parentElement.querySelector('.qty-input');
      let qty = parseInt(input.value) || 1;
      qty = btn.dataset.action === 'increase' ? qty + 1 : qty - 1;
      input.value = qty;
      updateCart(btn.closest('.cart-item').dataset.id, qty);
    });
  });

  document.querySelectorAll('.qty-input').forEach(input => {
    input.addEventListener('change', () => {
      let qty = parseInt(input.value);
      if (isNaN(qty)) qty = 1;
      updateCart(input.closest('.cart-item').dataset.id, qty);
    });
  });

  document.querySelectorAll('.remove-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      if (confirm('Remove this item?')) {
        const id = btn.closest('.cart-item').dataset.id;
        const res = await fetch(`/remove-from-cart/${id}`, { method: 'POST' });
        if (res.ok) {
          btn.closest('.cart-item').remove();
          recalcTotal();
        }
      }
    });
  });
});
</script>

</body>
</html>
